{
  "name": "colony-network",
  "version": "1.3.2",
  "description": "",
  "main": "truffle.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "solium-staged": "bash ./scripts/solium.sh",
    "eslint-staged": "bash ./scripts/eslint.sh",
    "eslint": "eslint .",
    "solium": "solium --dir .",
    "check:storagevars": "./node_modules/babel-cli/bin/babel-node.js ./scripts/check-storage.js",
    "fakeContracts": "bash ./scripts/fake-contracts.sh",
    "blockchainClient": "bash ./scripts/blockchain-client.sh",
    "killBlockchainClient": "bash ./scripts/kill-blockchain-client.sh",
    "test:contracts": "npm run blockchainClient --silent & truffle migrate --reset --compile-all && truffle test --network development",
    "test:contracts:upgrade": "npm run blockchainClient parity --silent & npm run fakeContracts && truffle migrate --reset --compile-all && truffle test ./upgrade-test/* --network integration", 
    "test:contracts:gasCosts": "npm run blockchainClient parity --silent & truffle migrate --reset --compile-all && truffle test gasCosts/gasCosts.js --network development",
    "posttest:contracts": "npm run killBlockchainClient",
    "posttest:contracts:upgrade": "npm run killBlockchainClient",
    "posttest:contracts:gasCosts": "npm run killBlockchainClient"
  },
  "pre-commit": ["eslint-staged", "solium-staged"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoinColony/colonyNetwork.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JoinColony/colonyNetwork/issues"
  },
  "homepage": "https://github.com/JoinColony/colonyNetwork#readme",
  "devDependencies": {
    "@colony/eslint-config-colony": "2.0.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "bignumber.js": "^5.0.0",
    "chai": "^4.1.2",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-import-resolver-jest": "^1.1.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-import": "^2.8.0",
    "ethereumjs-testrpc": "6.0.3",
    "gulp": "^3.9.1",
    "gulp-help": "^1.6.1",
    "gulp-util": "^3.0.8",
    "istanbul": "^0.4.5",
    "minimist": "^1.2.0",
    "mocha": "^4.1.0",
    "mocha-circleci-reporter": "^0.0.2",
    "pre-commit": "^1.2.2",
    "pshell": "^1.1.0",
    "request": "^2.83.0",
    "rimraf": "^2.6.2",
    "shortid": "^2.2.8",
    "solidity-coverage": "0.4.8",
    "solidity-parser-antlr": "^0.2.6",
    "solium": "^1.1.2",
    "truffle": "^4.0.4",
    "web3-utils": "^1.0.0-beta.27"
  }
}
